<section class="insert">
    <h3>INSERT ACTION</h3>
    <form action="/insert" method="post">
        <div class="input">
            <label for="title">Status:</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Description:</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Type:</label>
            <input type="text" id="author" name="author">
        </div>
        <div class="input">
            <label for="author">ID:</label>
            <input type="text" id="author" name="author">
        </div>
        <div class="input">
            <label for="author">RuleStatus:</label>
            <input type="text" id="author" name="author">
        </div>
        <div class="input">
            <label for="author">Name</label>
            <input type="text" id="author" name="author">
        </div>
        <button type="submit">INSERT</button>
    </form>
</section>
<section class="get">
    <h3>SEE ACTIONS</h3>
    <a href="/get-data">LOAD DATA</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>Status: {{ this.title }}</div>
                <div>Description: {{ this.content }}</div>
                <div>Type: {{ this.author }}</div>
                <div>ID: {{ this._id }}</div>
                <div>RuleStatus: {{ this.title }}</div>
                <div>Name: {{ this.title }}</div>
            </article>
        {{/each}}
    </div>
</section>
<section class="update">
    <h3>UPDATE ACTIONS</h3>
    <form action="/update" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div>
        <button type="submit">UPDATE</button>
    </form>
</section>
</section>
<section class="delete">
    <h3>DELETE ACTIONS</h3>
    <form action="/delete" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <button type="submit">DELETE</button>
    </form>
</section>
